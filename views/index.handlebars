        <div class="row">
            <div class="col-sm-12 col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading"><h2 class="text-center">Place Order</h2></div>
                    <div class="panel-body">
                        <form class="create-update-form" action="burgers/create" method="POST">
                          <div class="form-group">
                            <label for="ca">burger Name:</label>
                            <input type="text" id="ca" name="name">
                          </div>

                          <div class="form-group">
                            <label for="slee">devoured?</label><br>
                            <input type="radio" name="devoured" value="1" checked> devoured!<br>
                            <input type="radio" name="devoured" value="0"> not devoured!
                          </div>

                          <button type="submit">Add burger</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading"><h2 class="text-center">Pick Up Order</h2></div>
                    <div class="panel-body">
                        <ul>
                          {{#each burgers}}
                            {{#unless this.devoured}}
                              <li>
                                {{this.burger_name}}

                                <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                                  <input type="hidden" name="devoured" value="true">
                                  <button type="submit">Devour!</button>
                                </form>
                              </li>
                            {{/unless}}
                          {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading"><h2 class="text-center">Order Picked Up</h2></div>
                    <div class="panel-body">
                        <ul>
                          {{#each burgers}}
                            {{#if this.devoured}}
                              <li>
                                {{this.burger_name}}

                                <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                                  <input type="hidden" name="devoured" value="false">
                                  <button type="submit">Make it Available!</button>
                                </form>
                              </li>
                            {{/if}}
                          {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>